  "version": "0.2.0",
  "configurations": [
    {
      "name": "Project Manager API",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:debug"
      ],
      "port": 3000,
      "console": "integratedTerminal",
      "trace": true
    },
    {
      "name": "Tasks microservice",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "nest",
      "runtimeArgs": [
        "start",
        "tasks",
        "--watch"
      ],
      "console": "integratedTerminal",
      "trace": true
    }
  ]
}
